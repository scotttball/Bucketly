<div class="row">
  <div class="col s12 m12 l12">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
          <div class="col s12 m6 l4">
          <%= link_to user_post_path(@user, p) do %>
            <div class="card">
              <div class="card-image">
                <%= image_tag post.picture.url(:original), class: "center" %>
                <span class="card-title"><%= post.title %></span>
              </div>
              <div class="card-content">
                <p><%= post.description %></p>
              </div>
              <div class="card-action">
                <p><%#= link_to user_post_path(@user, post), View Post %></p> 
              </div>
            </div>
            <% end %>
          </div>
      <% end %>
    <% else %>
        <h1 class="center">No Posts</h1>
    <% end %>
  </div>
</div>


            